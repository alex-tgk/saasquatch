# Server Configuration
PORT={{service.port}}
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

{{#if service.features.database}}# Database Configuration{{#if (eq infrastructure.database.type "postgresql")}}
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{{snakeCase service.name}}

# OR use individual settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME={{snakeCase service.name}}
{{else}}
DATABASE_URL=./data/{{service.name}}.db
{{/if}}{{/if}}
{{#if service.features.cache}}# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
{{/if}}
{{#if service.features.messageQueue}}# NATS Configuration
NATS_URL=nats://localhost:4222
{{/if}}
{{#if service.features.cors}}# CORS Configuration
CORS_ORIGIN=http://localhost:3000
{{/if}}
