@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* SaaSQuatch Brand Colors - Light Theme */
    /* Background: Slate 50 #F8FAFC */
    --background: 210 40% 98%;
    /* Text: Slate 800 #1E293B */
    --foreground: 215 25% 14%;

    /* Cards: White with Slate borders */
    --card: 0 0% 100%;
    --card-foreground: 215 25% 14%;

    /* Popovers */
    --popover: 0 0% 100%;
    --popover-foreground: 215 25% 14%;

    /* Primary: Royal Blue 600 #2563EB */
    --primary: 221 83% 53%;
    --primary-foreground: 0 0% 100%;

    /* Secondary: Steel Blue 600 #475569 */
    --secondary: 215 25% 35%;
    --secondary-foreground: 0 0% 100%;

    /* Muted: Slate 100 #F1F5F9 */
    --muted: 210 40% 96.1%;
    --muted-foreground: 215 16% 47%;

    /* Accent: Royal Blue with lighter bg */
    --accent: 221 83% 95%;
    --accent-foreground: 221 83% 53%;

    /* Destructive: Error Red #EF4444 */
    --destructive: 0 84% 60%;
    --destructive-foreground: 0 0% 100%;

    /* Success: Emerald #10B981 */
    --success: 160 84% 39%;
    --success-foreground: 0 0% 100%;

    /* Warning: Amber #F59E0B */
    --warning: 38 92% 50%;
    --warning-foreground: 0 0% 100%;

    /* Borders: Slate 200 #E2E8F0 */
    --border: 214 32% 91%;
    --input: 214 32% 91%;

    /* Ring: Royal Blue */
    --ring: 221 83% 53%;

    /* Radius */
    --radius: 0.5rem;
  }

  .dark {
    /* SaaSQuatch Brand Colors - Dark Theme */
    /* Background: Slate 900 #0F172A */
    --background: 222 84% 5%;
    /* Text: Slate 100 #F1F5F9 */
    --foreground: 210 40% 96%;

    /* Cards: Slate 800 #1E293B */
    --card: 215 25% 14%;
    --card-foreground: 210 40% 96%;

    /* Popovers */
    --popover: 215 25% 14%;
    --popover-foreground: 210 40% 96%;

    /* Primary: Royal Blue 500 (lighter in dark) #3B82F6 */
    --primary: 221 83% 60%;
    --primary-foreground: 0 0% 100%;

    /* Secondary: Steel Blue 500 */
    --secondary: 215 20% 50%;
    --secondary-foreground: 0 0% 100%;

    /* Muted: Slate 800 */
    --muted: 215 25% 20%;
    --muted-foreground: 215 20% 65%;

    /* Accent */
    --accent: 221 83% 20%;
    --accent-foreground: 221 83% 70%;

    /* Destructive */
    --destructive: 0 84% 60%;
    --destructive-foreground: 0 0% 100%;

    /* Success */
    --success: 160 84% 45%;
    --success-foreground: 0 0% 100%;

    /* Warning */
    --warning: 38 92% 55%;
    --warning-foreground: 0 0% 100%;

    /* Borders: Slate 700 */
    --border: 215 25% 27%;
    --input: 215 25% 27%;

    /* Ring */
    --ring: 221 83% 60%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }
}

@layer utilities {
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
}
