'use client'

import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card'
import { Badge } from '@/components/ui/badge'
import { Button } from '@/components/ui/button'
import { Activity, AlertCircle, CheckCircle, Database, MessageSquare, Shield, XCircle } from 'lucide-react'
import { formatUptime } from '@/lib/utils'
import type { ServiceStatus } from '@/lib/types'

interface ServiceCardProps {
  service: ServiceStatus
  onViewLogs?: () => void
  onViewMetrics?: () => void
}

export function ServiceCard({ service, onViewLogs, onViewMetrics }: ServiceCardProps) {
  const { name, displayName, health, readiness } = service

  const getStatusIcon = () => {
    switch (health.status) {
      case 'healthy':
        return <CheckCircle className="h-5 w-5 text-green-500" />
      case 'degraded':
        return <AlertCircle className="h-5 w-5 text-yellow-500" />
      case 'unhealthy':
      case 'offline':
        return <XCircle className="h-5 w-5 text-red-500" />
      default:
        return <Activity className="h-5 w-5 text-gray-500" />
    }
  }

  const getStatusBadge = () => {
    const variants = {
      healthy: 'success',
      degraded: 'warning',
      unhealthy: 'error',
      offline: 'error',
    } as const

    return (
      <Badge variant={variants[health.status] || 'default'}>
        {health.status.toUpperCase()}
      </Badge>
    )
  }

  return (
    <Card className="transition-all hover:shadow-md">
      <CardHeader>
        <div className="flex items-start justify-between">
          <div className="space-y-1">
            <CardTitle className="flex items-center gap-2">
              {getStatusIcon()}
              {displayName}
            </CardTitle>
            <CardDescription>
              Port: {service.name.match(/\d+/)?.[0] || 'N/A'}
            </CardDescription>
          </div>
          {getStatusBadge()}
        </div>
      </CardHeader>
      <CardContent>
        <div className="space-y-4">
          {/* Uptime */}
          <div className="flex justify-between text-sm">
            <span className="text-muted-foreground">Uptime:</span>
            <span className="font-medium">{formatUptime(health.uptime)}</span>
          </div>

          {/* Version */}
          {health.version && (
            <div className="flex justify-between text-sm">
              <span className="text-muted-foreground">Version:</span>
              <span className="font-medium">{health.version}</span>
            </div>
          )}

          {/* Readiness Checks */}
          {readiness && (
            <div className="space-y-2 border-t pt-3">
              <p className="text-sm font-medium">Dependencies:</p>
              <div className="space-y-1">
                {Object.entries(readiness.checks).map(([key, check]) => (
                  <div key={key} className="flex items-center justify-between text-xs">
                    <div className="flex items-center gap-2">
                      {key === 'database' && <Database className="h-3 w-3" />}
                      {key === 'cache' && <Activity className="h-3 w-3" />}
                      {key === 'messageQueue' && <MessageSquare className="h-3 w-3" />}
                      {key === 'auth' && <Shield className="h-3 w-3" />}
                      <span className="capitalize">{key}</span>
                    </div>
                    <Badge
                      variant={check.status === 'connected' ? 'success' : 'error'}
                      className="h-5 px-2 text-xs"
                    >
                      {check.status}
                    </Badge>
                  </div>
                ))}
              </div>
            </div>
          )}

          {/* Error Message */}
          {health.error && (
            <div className="rounded-md bg-red-50 p-2 text-xs text-red-800">
              {health.error}
            </div>
          )}

          {/* Actions */}
          <div className="flex gap-2 pt-2">
            <Button size="sm" variant="outline" className="flex-1" onClick={onViewLogs}>
              View Logs
            </Button>
            <Button size="sm" variant="outline" className="flex-1" onClick={onViewMetrics}>
              Metrics
            </Button>
          </div>
        </div>
      </CardContent>
    </Card>
  )
}
