# Dashboard Configuration
NEXT_PUBLIC_DASHBOARD_PORT={{dashboard.port}}
NEXT_PUBLIC_PROJECT_NAME={{project.name}}

# Service URLs
{{#each services}}
NEXT_PUBLIC_{{uppercase this.name}}_URL=http://localhost:{{this.port}}
{{/each}}

# Infrastructure URLs
{{#if infrastructure.cache}}
NEXT_PUBLIC_REDIS_URL=redis://localhost:6379
{{/if}}
{{#if infrastructure.messageQueue}}
NEXT_PUBLIC_NATS_URL=http://localhost:8222
{{/if}}
{{#if (eq infrastructure.database.type "postgresql")}}
NEXT_PUBLIC_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{{project.name}}
{{/if}}

# Monitoring Configuration
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL=5000
NEXT_PUBLIC_LOGS_POLL_INTERVAL=2000
NEXT_PUBLIC_METRICS_POLL_INTERVAL=10000

# Feature Flags
NEXT_PUBLIC_ENABLE_SERVICE_CONTROLS=true
NEXT_PUBLIC_ENABLE_REDIS_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_NATS_INSPECTOR=true
