# Service Configuration
NODE_ENV=development
PORT={{service.port}}
HOST=localhost
LOG_LEVEL=info

{{#if service.features.database}}
# Database Configuration ({{infrastructure.database.type}})
{{#if (eq infrastructure.database.type "postgresql")}}
# PostgreSQL Connection
# Option 1: Connection String (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/{{snakeCase service.name}}

# Option 2: Individual Parameters (easier for development)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME={{snakeCase service.name}}

# SSL Configuration (production only)
# DB_SSL=true

# Test Database (used by test suite)
TEST_DB_NAME={{snakeCase service.name}}_test
# TEST_DATABASE_URL=postgresql://username:password@localhost:5432/{{snakeCase service.name}}_test
{{else}}
# SQLite Connection
DATABASE_URL=./data/{{service.name}}.db

# Test Database (in-memory for fast tests)
TEST_DATABASE_URL=:memory:
{{/if}}

# Migration Configuration
# Set to 'false' to disable automatic migrations on service startup
# When disabled, run migrations manually with: npm run migrate:latest
AUTO_MIGRATE=true
{{/if}}

{{#if service.features.cache}}
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379
{{/if}}

{{#if service.features.messageQueue}}
# NATS Configuration
NATS_URL=nats://localhost:4222
{{/if}}

{{#if service.features.jwt}}
# JWT Configuration
# SECURITY WARNING: Change this secret in production!
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
{{/if}}

{{#if service.features.cors}}
# CORS Configuration
# Set to specific origin in production (e.g., https://yourdomain.com)
CORS_ORIGIN=true
{{/if}}
