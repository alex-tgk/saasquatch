# Project Environment Variables
# Copy this file to .env and update with your values

# === General Configuration ===
NODE_ENV=development
LOG_LEVEL=info
TZ=UTC

{{#if infrastructure.database}}
{{#eq infrastructure.database.type "postgresql"}}
# === PostgreSQL Configuration ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB={{project.name}}
POSTGRES_PORT=5432
{{/eq}}
{{/if}}

{{#if infrastructure.cache}}
{{#eq infrastructure.cache.type "redis"}}
# === Redis Configuration ===
REDIS_PORT=6379
{{/eq}}
{{/if}}

{{#if infrastructure.messageQueue}}
{{#eq infrastructure.messageQueue.type "nats"}}
# === NATS Configuration ===
NATS_PORT=4222
NATS_HTTP_PORT=8222
{{/eq}}
{{/if}}

# === JWT Configuration ===
# WARNING: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# === Service Ports ===
{{#each services}}
# {{this.name}} - {{this.description}}
{{uppercase this.name}}_PORT={{this.port}}
{{/each}}
